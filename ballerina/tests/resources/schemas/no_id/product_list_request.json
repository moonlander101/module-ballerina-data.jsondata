{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "properties": {
    "category_id" : {
      "type" : "string",
      "maxLength": 10,
      "pattern": "^\\d{3}$"
    },
    "page_size" : {
      "type" : "integer",
      "minimum": 0
    },
    "page_number" : {
      "type" : "integer",
      "minimum": 1
    }
  },
  "required": ["category_id","page_size","page_number"]
}